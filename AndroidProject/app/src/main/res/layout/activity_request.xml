<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_activity"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    tools:context="br.ufsm.projetosoftware.appdoacao.RequestActivity">

    <Button
        android:id="@+id/btConfirmaSolicitacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar solicitação"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="-2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp" />

    <EditText
        android:id="@+id/etJustificativa"
        android:hint="Justifique sua solicitação.."
        android:layout_width="298dp"
        android:layout_height="364dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btConfirmaSolicitacao"
        tools:layout_editor_absoluteY="-82dp"
        tools:layout_editor_absoluteX="9dp" />


</android.support.constraint.ConstraintLayout>
